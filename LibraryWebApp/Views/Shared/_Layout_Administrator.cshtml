@using LibraryWebApp.Models;

@{
    UserModel currentUser = (UserModel)Session["UserSession"];
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Library Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Library Application", "SearchLibrary", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Search", "SearchLibrary", "Home")</li>
                    <li>@Html.ActionLink("My Profile", "UpdateProfile", "User")</li>
                    <li>@Html.ActionLink("Books", "GetBooks", "Book")</li>
                    <li>@Html.ActionLink("Author", "GetAuthors", "Author")</li>
                    <li>@Html.ActionLink("Publisher", "GetPublishers", "Publisher")</li>
                    <li>@Html.ActionLink("Genre", "GetGenres", "Genre")</li>
                    <li>@Html.ActionLink("User", "GetUsers", "User")</li>
                    <li>@Html.ActionLink("Logout", "Logout", "Home")</li>
                    <li><a href="#"> Welcome @currentUser.FirstName, Your Role is @currentUser.RoleName</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />       
    </div>
    <footer class="footer-library">
        <p>
            <img src="https://www.dbrl.org/wp-content/themes/cw-dbrl-theme/images/DBRL-linear-white.png" style="width:400px;" />
            <i class="fa fa-twitter" style="font-size:24px"></i>
            <i class="fa fa-instagram" style="font-size:24px"></i>
            <i class="fa fa-youtube" style="font-size:24px"></i>
        </p>
        <div>
            <a href="https://www.dbrl.org/about">ABOUT US</a>
            <a href="https://www.dbrl.org/about/governance">GOVERNANCE</a>
            <a href="https://www.dbrl.org/about/accessibility">ACCESSIBILITY</a>
            <a href="https://www.dbrl.org/employment">EMPLOYMENT</a>
            <a href="https://www.dbrl.org/giving">GIVE TO YOUR LIBRARY</a>
            <i class="glyphicon-envelope" style="font-size:24px"><a href="mailto:giancarlo.rhodes@onshoreoutsourcing.com"></a></i>
            @*<p>&copy; @DateTime.Now.Year - Library Application</p>*@
        </div>
    </footer>



    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/library")
    @RenderSection("scripts", required: false)
</body>
</html>
